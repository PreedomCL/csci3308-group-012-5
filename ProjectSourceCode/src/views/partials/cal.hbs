<div class="calendar-container"> {{!style="width: 100%; height: 1200px;"}}
  <div id="calendar" data-user-id="{{id}}" data-user-name="{{name}}"></div>
</div>

<div id="parent">
  <div class="modal fade" id="availability-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="modalLable">Update Your Weekly Availability</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="availability-form" novalidate> {{! TODO: Add form validation }}
                <div class="alert alert-info">
                  Insert time ranges when you are typically available each week. You may add up to 5 available time ranges per day.
                </div>
                <div class="day" id="monday">
                  <div>
                    <h5>Monday</h5>
                    <div class="row smalltime" id="times1">
                      <div class="selector" id="selector1"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="1">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="tuesday">
                  <div>  
                    <h5>Tuesday</h5>
                    <div class="row smalltime" id="times2">
                      <div class="selector" id="selector2"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="2">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="wednesday">
                  <div>
                    <h5>Wednesday</h5>
                    <div class="row smalltime" id="times3">
                      <div class="selector" id="selector3"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="3">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="thursday">
                  <div>
                    <h5>Thursday</h5>
                    <div class="row smalltime" id="times4">
                      <div class="selector" id="selector4"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="4">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="friday">
                  <div>
                    <h5>Friday</h5>
                    <div class="row smalltime" id="times5">
                      <div class="selector" id="selector5"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="5">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="saturday" >
                  <div>
                    <h5>Saturday</h5>
                    <div class="row smalltime" id="times6">
                      <div class="selector" id="selector6"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="6">Add time slot</button>
                  </div>
                </div>
                <div class="day" id="sunday">
                  <div>
                    <h5>Sunday</h5>
                    <div class="row smalltime" id="times0">
                        <div class="selector" id="selector0"></div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-time" day="0">Add time slot</button>
                  </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
          <button type="reset" form="availability-form" class="btn btn-secondary mt-3"  data-bs-dismiss="modal">Cancel</button>
          <button type="button" id="save-button" class="btn btn-primary mt-3" data-bs-dismiss="modal">Update</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="download-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="modalLable">Event Information</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="download-body">
          {{!-- content goes here --}}
        </div>
      </div>
    </div>
  </div>
</div>

