<div id="calendar-container"> {{!style="width: 100%; height: 1200px;"}}
  <div id="calendar" data-user-id="{{userID}}"></div>
  <div id="parent">
  <div class="modal fade" id="event_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create Event</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form id="event-form" novalidate>
              <div class="mb-3">
                  <label for="event_name" class="form-label">Event Name:</label>
                  <input type="text" id="event_name" name="event_name" class="form-control" placeholder="Enter event name/purpose"required>
                  <div id="alert_name" class="alert"></div>
              </div>
              <div class="mb-3">
                  <label for="event_category" class="form-label">Category:</label>
                  <select id="event_category" name="event_category" class="form-select" required>
                      <option value="Work">Work</option>
                      <option value="School">School</option> 
                      <option value="Fun">Fun</option> 
                      <option value="Other">Other</option> 
                  </select>  
              </div>
              <div class="mb-3">
                  <label for="event_weekday" class="form-label">Weekday:</label>
                  <select id="event_weekday" name="event_weekday" class="form-select" required>
                      <option value="Monday">Monday</option>
                      <option value="Tuesday">Tuesday</option>
                      <option value="Wednesday">Wednesday</option>
                      <option value="Thursday">Thursday</option>
                      <option value="Friday">Friday</option>
                      <option value="Saturday">Saturday</option>
                      <option value="Sunday">Sunday</option>
                  </select>
              </div>
              <div class="mb-3">
                  <label for="event_time" class="form-label">Time:</label>
                  <input type="time" id="event_time" name="event_time" class="form-control" required>
                  <div id="alert_time" class="alert"></div>
              </div>
              <div class="mb-3">
                  <label for="event_modality" class="form-control">Event Modality:</label>
                  <select id="event_modality" name="event_modality" class="form-select" onchange="updateLocationOptions(this.value)">
                      <option value="In-Person">In-Person</option>
                      <option value="Remote">Remote</option>
                  </select>
              </div>
              <div id="location_field" class="mb-3">
                  <label for="event_location" class="form-label">Location:</label>
                  <input type="text" id="event_location" name="event_location" class="form-control" placeholder="Enter event location">
                  <div id="alert_location" class="alert"></div>
              </div>
              <div id="remote_url_field" class="mb-3" style="display: none;">
                  <label for="event_remote_url" class="form-label">Remote URL:</label>
                  <input type="text" id="event_remote_url" name="event_remote_url" class="form-control" required placeholder="Enter Meeting URL (Zoom, MS Teams, etc.)">
                  <div id="alert_remote" class="alert"></div>
              </div>
              <div id="attendees_field" class="mb-3">
                  <label for="event_attendees" class="form-label">Attendees:</label>
                  <input type="text" id="event_attendees" name="event_attendees" class="form-control" placeholder="Enter attendee names separated by commas" required>
              </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary mt-3" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="save_button" class="btn btn-primary mt-3" onclick="saveEvent()">Create Event</button>

      </div>
    </div>
  </div>
  </div>
</div>
</div>
